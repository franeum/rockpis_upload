#:kivy 1.9.1

# Define your background color Template
<BackgroundColor@Widget>
    background_color: 1, 1, 1, 1
    canvas.before:
        Color:
            rgba: root.background_color
        Rectangle:
            size: self.size
            pos: self.pos
# Now you can simply Mix the `BackgroundColor` class with almost
# any other widget... to give it a background.
<BackgroundLabel@Label+BackgroundColor>
    background_color: 0, 0, 0, 0


<MainBox>:
    orientation: "vertical"
    
    BoxLayout:
        size_hint_y: 0.8
        orientation: "horizontal"
        
        BoxLayout:
            padding: [25,25,25,25]
            orientation: "vertical"
            BackgroundLabel:
                size_hint_y: 0.8
                text: "networks list"
                background_color: 1, 1, 1, 1
                color: [1,0,0,1]
                outline_color: [1,0,0,1]
            Button:
                size_hint_y: 0.2
        
        BoxLayout:
            orientation: "vertical"
            #spacing: 25
            padding: [25,25,25,25]
            Button:
                size_hint_y: 1
            Button:
                size_hint_y: 1
    
    BoxLayout:
        size_hint_y: 0.2
        padding: [25,25,25,25]
        Spinner:
            id: spinner_id
            size_hint_x: 1
            text: 'Home'
            values: app.networks
            #on_value:
                #print: "The spinner"
            on_text: root.spinner_clicked(spinner_id.text) 
