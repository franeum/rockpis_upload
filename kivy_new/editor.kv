#:kivy 1.1.0

Root:
    #:set fs 24
    #:set bord [5,5,5,5]
    #:set fn 'Roboto-Bold'
    cols: 2  
    rows: 2
    padding: [50,50,50,50]
    spacing: 50
    
    Button:
        #pos_hint: { "x": 0, "top": 1 }
        #size_hint: 0.5, 1
        border: bord 
        font_size: fs
        font_name: fn
        text: 'LOAD PATCH'
        on_release: root.show_load()

    Button:
        #pos_hint: { "x": 0.5, "top": 1 }
        #size_hint: 0.5, 1
        border: bord 
        font_size: fs
        font_name: fn
        text: 'LOAD PATCH'
        on_release: root.show_connections()

    Button:
        text: 'Load Patch'.upper() 
        font_size: fs
        font_name: fn

    Button:
        text: 'Load Patch'.upper()
        font_size: fs
        font_name: fn


<LoadDialog>:
    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: "vertical"

        FileChooserIconView:
            path: root.path #'~/.'
            filters: ['*.pd']
            id: filechooser

        BoxLayout:
            size_hint_y: None

            Button:
                text: "Cancel"
                on_release: root.cancel()

            Button:
                text: "Load"
                on_release: root.load(filechooser.path, filechooser.selection)